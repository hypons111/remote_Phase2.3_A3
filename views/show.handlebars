<div class="container py-5">
  <div class="text-center">
    <h1>{{restaurant.name}}</h1>
    <p class="mb-3">
      {{restaurant.category}}
    </p>
    <div class="text-center">
      <img class="rounded mb-3" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;">
    </div>
  </div>
  <div class="row">
    <div class="col-8 col-md-8 col-lg-8 mx-auto">
      <p class="mb-1">
        {{restaurant.location}}
      </p>
      <p class="mb-1">
        {{restaurant.phone}}
      </p>
      <p class="mb-1">
        {{restaurant.description}}
      </p>

    </div>
  </div>

</div>